---
import Img from '../components/images/PMReady.png';
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/PMReady/favicon.svg" />
		<link
			href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
			rel="stylesheet"
		/>
		<title>PMReady Waitlist</title>
		<style>
			@import url("https://fonts.googleapis.com/css2?family=Poppins&display=swap");
			@tailwind base;
			@tailwind components;
			@tailwind utilities;
      .big-circle {
        position: fixed;
        /* bottom: -4rem;
        left: 10%; */
        width: 200px;
        height: 200px;
        background-color: #CAD593;
        border-radius: 50%;
      }
      .square {
        position: fixed;
        /* bottom: 150px;
        right: -37px; */
        width: 150px;
        height: 150px;
        background-color: #235789;
      }
      .triangle {
        position: fixed;
        /* top: 200px;
        left: -15px; */
        width: 0;
        height: 50px;
        border-left: 32px solid transparent;
        border-right: 32px solid transparent;
        border-bottom: 60px solid #FF6978;
      }
		</style>
	</head>
  <body class="bg-[#EDEDED] text-black font-poppins">
    <header>
      <div class="bg-white mx-auto px-10 py-6 ">
        <a href="/" title="Home" class="flex flex-wrap items-center">
          <img class="w-10 md:w-12" src={Img} alt="PMReady Logo" />
          <span class="font-normal text-3xl hidden md:block ml-3" style="background: linear-gradient(to right, #79ADDC, #CAD593); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            PMReady
          </span>
        </a>
      </div>
    </header>
    <main>
      <div class="w-[90%] md:w-[67%] mx-auto px-5 py-10 pb-5 md:py-20 md:pb-10 text-center">
        <h1 class="text-5xl pb-5 md:pb-10 text-[#235789]">Join the waitlist for <br/>
          <span style="background: linear-gradient(to right, #79ADDC, #CAD593); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            PMReady!
          </span>
        </h1>
        <p class="text-2xl md:text-3xl my-5 mb-10 md:mb-20 font-light">
          Excel in project management with exclusive training! <br/> 
          Expert-led courses, workshops & mentoring. Sign up now!
        </p>
        <a href="https://docs.google.com/forms/d/e/1FAIpQLSfex2Az45am9FtGFzW2U18nc8SF_UmKxNO2RCILY0-nCgWCrA/viewform" class="bg-[#FF6978] text-white font-medium text-2xl py-4 px-14 rounded-full">
          Waitlist
        </a> 
      </div>
    </main>
    <div class="big-circle -z-10 -bottom-[20%] left-4 md:-bottom-16 md:left-8"></div>
    <div class="square -z-10 bottom-[15%] -right-28 md:-right-10"></div>  
    <div class="triangle -z-10 top-52 -left-4"></div>  
  </body>
</html>